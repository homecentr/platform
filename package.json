{
  "name": "homecentr-platform",
  "version": "1.0.0",
  "repository": "git@github.com:homecentr/platform.git",
  "author": "Lukas Holota",
  "license": "GPL",
  "private": true,
  "scripts": {
    "lint": "ANSIBLE_CONFIG=\"./ansible.cfg\" ansible-lint --strict",
    
    "install": "ansible-galaxy install -r ./requirements.yml && ansible-playbook ./playbooks/local.yml",
    
    "lab:create": "pwsh -ExecutionPolicy RemoteSigned -WorkingDirectory ./scripts ./scripts/lab-create.ps1",
    "lab:destroy": "pwsh -ExecutionPolicy RemoteSigned -WorkingDirectory ./scripts ./scripts/lab-destroy.ps1",
    "lab:clear-keys": "./scripts/clearkeys.sh",

    "lab:init": "ANSIBLE_HOST_KEY_CHECKING=False ./scripts/apply.sh lab proxmox -u root -e ansible_user=root --tags init -k",
    "lab:apply": "./scripts/apply.sh lab",

    "prod:init": "ANSIBLE_HOST_KEY_CHECKING=False ./scripts/apply.sh prod proxmox -u root -e ansible_user=root --tags init -k",
    "prod:apply": "./scripts/apply.sh prod"
  }
}