version: "3.9"
services:
  homepage:
    image: ghcr.io/gethomepage/homepage:{{ app_homepage_image_tag }}
    container_name: homepage
    restart: unless-stopped
    working_dir: /app
    entrypoint: ["node", "server.js"]
    healthcheck:
      disable: true
    environment:
      PUID: {{ app_homepage_uid }}
      PGID: {{ app_homepage_gid }}
    ports:
      - 3000:3000
    volumes:
      - /etc/homepage/config:/app/config
      - /etc/homepage/icons:/app/public/icons
      - /var/log/homepage:/app/config/logs
