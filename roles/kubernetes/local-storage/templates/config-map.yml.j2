---
kind: ConfigMap
apiVersion: v1
metadata:
  name: local-path-config-{{ volume.name }}
  namespace: {{ local_storage_namespace }}
data:
  config.json: |-
    {
      "sharedFileSystemPath": "{{ volume.path }}"
    }
  # The directories are assumed to already exist
  setup: |-
    #!/bin/sh
    set -eu
    echo "Hello"
  # mkdir -m 0777 -p "$VOL_DIR"
  teardown: |-
    #!/bin/sh
    set -eu
    echo "Exit"
  # rm -rf "$VOL_DIR"
  helperPod.yaml: |-
    apiVersion: v1
    kind: Pod
    metadata:
      name: helper-pod
    spec:
      containers:
      - name: helper-pod
        image: busybox
        imagePullPolicy: IfNotPresent