apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: grafana-allow-kubeapi
  namespace: monitoring
spec:
  ingress:
    - from: # Allow kubeapi to call grafana
{% for node in groups['k8s_nodes'] %}
        - ipBlock:
            cidr: {{ hostvars[node].ansible_host }}/32
{% endfor %}
  egress:
    - ports:
      - protocol: TCP
        port: 6443
      to:
{% for node in groups['k8s_nodes'] %}
        - ipBlock:
            cidr: {{ hostvars[node].ansible_host }}/32
{% endfor %}
  podSelector:
    matchLabels:
      app.kubernetes.io/name: grafana
  policyTypes:
  - Egress
  - Ingress