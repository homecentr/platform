apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: prometheus-allow-outbound-cadvisor
  namespace: monitoring
spec:
  egress:
    - ports:
      - protocol: TCP
        port: 10250
      to:
{% for node in groups['k8s_nodes'] %}
        - ipBlock:
            cidr: {{ hostvars[node].ansible_host }}/32
{% endfor %}
  podSelector:
    matchLabels:
      app.kubernetes.io/name: prometheus
  policyTypes:
  - Egress