apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: sealed-secrets
  namespace: kube-system
spec:
  podSelector:
    matchLabels:
      app.kubernetes.io/name: sealed-secrets
  policyTypes:
    - Ingress
    - Egress
  egress:
    - to: # Kubernetes API
{% for node in groups['k8s_nodes'] %}
      - ipBlock:
          cidr: {{ hostvars[node]['ansible_host'] }}/32
{% endfor %}
      ports:
        - protocol: TCP
          port: 6443