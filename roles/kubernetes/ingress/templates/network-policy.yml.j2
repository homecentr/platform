apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: ingress
spec:
  podSelector:
    matchLabels:
      app.kubernetes.io/name: ingress
  policyTypes:
    - Ingress
    - Egress
  ingress:
  # Ingress traffic
    - from:
        - ipBlock:
            cidr: 172.17.0.1/32
            #cidr: {{ ingress_cluster_cidr }}/32
  # Kube API
  egress: 
    - {}