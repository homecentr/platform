apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: reflector
  namespace: kube-system
spec:
  podSelector:
    matchLabels:
      app.kubernetes.io/name: reflector
  egress:
    - to: # Kubernetes API
{% for node in groups['k8s_nodes'] %}
        - ipBlock:
            cidr: {{ hostvars[node]['ansible_host'] }}/32
{% endfor %}
      ports:
        - protocol: TCP
          port: 6443
  ingress:
    - from: # Allow webhook calls from Kube API
{% for node in groups['k8s_nodes'] %}
        - ipBlock:
            cidr: {{ hostvars[node].ansible_host }}/32
{% endfor %}
  policyTypes:
  - Ingress
  - Egress