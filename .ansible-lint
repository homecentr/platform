exclude_paths:
  - .cache/
  - .github/
  - node_modules/
  - "**/*.sops.yml"
  - "**/*.sops.yaml"
  - ".sops.yaml"
  - "**/inventory/hosts.yaml"

use_default_rules: true

skip_list:
  - role-name[path]
  - name[play]
  - yaml[octal-values]
  - yaml[brackets]
  - yaml[new-line-at-end-of-file]

offline: false
